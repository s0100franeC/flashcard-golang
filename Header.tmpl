{{ define "Header" }}
<!DOCTYPE html>
<html lang="en-US">
    <head>
        <title>Golang Mysql Flashcards App</title>
        <meta charset="UTF-8" />
		<link href="https://fonts.googleapis.com/css?family=Lora:400,700|Montserrat:300" rel="stylesheet">
		<link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
		<style>
			body {
				background-color: #559b33;
				color: white;
				text-align: center;
				font-family: 'Montserrat', sans-serif;
			}

			h1, h2 {
				text-align: center;
				font-family: 'Montserrat', sans-serif;
				font-weight: 300;
				text-transform: uppercase;
			}

			table {
				background-color: white;
				table-layout: fixed;
				margin-left: auto;
				margin-right: auto;
				border-collapse: collapse;
			}
			
			table, th, td {			
				border: 1px solid white;
				padding: 5px;
			}
			
			th {
				background-color: #559b33;
				font-weight: bold;
			}
			
			td {
				color: black;
				border-color: #ccc;
				max-width: 100px;
				white-space: nowrap;
				overflow: hidden;
				text-overflow: ellipsis;
			}

			tr:nth-child(even) {
				background-color: #eee;
			}
			
			tr:hover {
				background-color: #ddd;
			}
			
			/* unvisited link */
			a:link {
				color: white;
				  text-decoration: none;
			}

			/* visited link */
			a:visited {
				color: white;
				  text-decoration: none;
			}

			/* mouse over link */
			a:hover {
				font-weight: bold;
				  text-decoration: underline;
			}

			/* selected link */
			a:active {
				color: white;
			}
			
			.material-icons {
				color: #888;
			}
			
			.material-icons:hover {
				color: #333;
			}
			
			.labels {
			  display: inline-block;
			  text-align: right;
			  padding: 5px;
			  width: 33%;
			  vertical-align: center;
			}

			.rights {
			  //background-color: blue;
			  display: inline-block;
			  text-align: left;
			  width: 48%;
			  vertical-align: center;
			}

			.user-input {
			  height: 20px;
			  width: 250px;
			  padding: 5px;
			  margin: 10px;
			  border: 1px solid #aaa;
			  border-radius: 3px;
			}
			
			#submit {
			  background-color: #fff;
			  border-radius: 10px;
			  color: #555;
			  font-size: 1.15em;
			  height: 35px;
			  width: 100px;
			  margin: 10px;
			}
					
			@media screen and (max-width: 520px) {
			  .labels {
				width: 100%;
				text-align: left;
			  }
			  .rights {
				width: 85%;
				float: left;
			  }
			  .user-input {
				width: 100%;
			  }
			  #flashcard {
				width: 200px;
			  }
			}
			
			#next-ico {
				font-size: 50px;
				color: #ccc;
			}
			
			#next-ico:hover {
				color: white;
			}
			
			#learntab {
				width: 400px;
				overflow-wrap: break-word;
			}
			
			#flashcard {
				background-color: white;
				color: #333;
				width: 400px;
				height: 250px;
				margin: 25px auto 25px auto;
				padding: 15px;
				padding-bottom: 50px;
				border: 5px dashed green;
			}

			.word {
				height: 50%;
			}

			.bigger {
				font-size: 30px;
				font-weight: bold;
			}

			#forborder {
				border-bottom: 5px dashed green;
			}
		</style>
    </head>
    <body>
        <h1>Golang Mysql Flashcards App</h1>   
{{ end }}