{{ define "New" }}
  {{ template "Header" }}
    {{ template "Menu" }} 
   <h2>New Phrase</h2>  
    <form method="POST" action="insert">
		<div class="phrrows">
			<div class="labels">
				<label id="jack-label" for="jack">* Jack</label>
			</div>
			<div class="rights">
				<input type="number" name="jack" placeholder="111" required class="user-input"/>
			</div>
		</div>
		<div class="phrrows">
			<div class="labels">
				<label id="native-label" for="native">* Native</label>
			</div>
			<div class="rights">
				<input type="text" name="native" placeholder="example" required class="user-input"/>
			</div>
		</div>
		<div class="phrrows">
			<div class="labels">
				<label id="translation-label" for="translation">Translation</label>
			</div>
			<div class="rights">
				<input type="text" name="translation" placeholder="przykÅ‚ad" class="user-input"/>
			</div>
		</div>
		<div class="phrrows">
			<div class="labels">
				<label id="course-label" for="courseName">Course Name</label>
			</div>
			<div class="rights">
				<input type="text" name="courseName" placeholder="example course" class="user-input"/>
			</div>
		</div>
		<div class="phrrows">
			<div class="labels">
				<label id="category-label" for="category">Category</label>
			</div>
			<div class="rights">
				<input type="text" name="category" placeholder="examples" class="user-input"/>
			</div>
		</div>
		<div class="phrrows">
			<div class="labels">
				<label id="language-label" for="natLanguage">* Language</label>
			</div>
			<div class="rights">
				<input type="text" name="natLanguage" placeholder="Examplish" required class="user-input"/>
			</div>
		</div>
		<button id="submit" type="submit">Submit</button>
    </form>
  {{ template "Footer" }}
{{ end }}